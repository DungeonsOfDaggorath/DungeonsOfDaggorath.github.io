{
  "name": "Dungeons Of Daggorath",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "RUBY_VARIANT": "3.2-bullseye",
      "EMSDK_VERSION": "3.1.59"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "remoteUser": "vscode",
  "onCreateCommand": "bundle config set --local path vendor/bundle",
  "postCreateCommand": "bundle install",
  "forwardPorts": [
    4000
  ],
  "portsAttributes": {
    "4000": {
      "label": "Jekyll Server"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "rebornix.Ruby",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
